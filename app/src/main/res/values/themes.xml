<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme: Uses a Material 3 bridge theme as the parent. -->
    <style name="Theme.Babymonitor" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Status bar color. Using the light background color for a clean header. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <!-- System flag to ensure status bar icons (time, battery) are dark for visibility on light background -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Optional: Setting navigation bar to white -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>
